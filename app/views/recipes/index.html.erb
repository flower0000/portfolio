<div class="container">
  <div class="row">
     <% @recipes.each do |recipe| %>
      <div class="col-lg-4">
        <div>
          <%= link_to recipe_path(recipe.id) do %>
            <%= attachment_image_tag recipe, :dish_photo, format: 'jpeg', size: "300x300", fallback: "no_image.jpg", size:'300x300', class: "mb-3" %>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= paginate @recipes %>
  </div>
</div>