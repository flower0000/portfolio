<!--review用メッセージ-->
<div class="primary"><%= flash[:alert] %></div>
<div class="danger"><%= flash[:notice] %></div>
<!--終わり-->

<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <div>
        <%= @recipe.dish %>
      </div>

      <div>
        <%= attachment_image_tag @recipe, :dish_photo, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg", size:"100x100" %>
      </div>

      <div>
        <%= @recipe.time %>
      </div>

      <div>
        費用<%= @recipe.money %>円
      </div>

    </div>
  </div>

  <!--材料表記-->
  <div class="row">
    <table class="table table-bordered" style="width:400px;">
      <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
        <tr class="bg-white">

          <td>
            <%= recipe_ingredient.material %>
          </td>

          <td>
            <%= recipe_ingredient.quantity %>
          </td>

        </tr>
      <% end %>
    </table>
  </div>

<!--調理手順表記-->
  <% @recipe.how_to_makes.each do |how_to_make| %>
    <div class="row">
      <div class="col-lg-5">
        <%= how_to_make.order_no %>.<%= how_to_make.introduction %>
      </div>
    </div>
  <% end %>

<!--いいね機能-->
  <div class="row">
    <% if user_signed_in? %>

      <% if @recipe.favorited_by?(current_user) %>
        <p>
          <%= link_to recipe_favorites_path(@recipe.id), method: :delete do %>
            ♥<%= @recipe.favorites.count %> いいね
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to recipe_favorites_path(@recipe.id), method: :post do %>
            ♡<%= @recipe.favorites.count %> いいね
          <% end %>
        </p>
      <% end %>

    <% end %>
  </div>
<!--いいね機能終わり-->

  <div class="row">
    <% if user_signed_in? %>
      <% if @recipe.user_id == current_user.id %>
        <%= link_to "編集する", edit_recipe_path(@recipe.id), class: "mt-3 btn btn-success" %>
        <%= link_to "削除する", recipe_path(@recipe.id), method: :delete, class: "mt-3 ml-3 btn btn-danger" %>
      <% end %>
    <% end %>
  </div>

<!--review作成画面-->
  <% if @recipe.reviews.exists?(user_id: current_user.id) %>
    <div style="color:blue;">レビュー済みです</div>
  <% else %>
    <div class="review-box">
      <%= form_with model:[@recipe, @review],url: recipe_reviews_path(@recipe.id), local: true  do |f| %>
<!--ネストしている場合はreviewに紐づいているreviewに投稿するのでモデル部に[@review, @review]で記述-->
<!--質問：postメソッドだが，ネストしており、urlにrecipe_idの記載があるためidを渡す必要がある？？？→　　-->


  <!--エラーメッセージ-->
  <%#= render 'layouts/error_messages', model: f.object %>
  <!--エラーハンドリングという内容を調べる-->

  <!--商品コードの送信-->
        <%= f.hidden_field :recipe_id, value: @recipe.id %>

<!--review★マーク機能はここから-->
  <!-- 評価 -->
        <div class="row form-group" id="star">
          <%= f.label :score,'評価 ', class:'col-lg-3 col-form-label' %>
          <%= f.hidden_field :score, id: :review_star %>
        </div>

  <!-- 評価javascript -->
        <script>
          $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'review[score]',
            half: true,
          });
        </script>
  <!--scoreNama: 'モデル[カラム]'で記述して記載-->
  <!--どこのカラムを使用して★マークを表示させたいか-->
  <!--ここまでで1セット-->

  <!-- 口コミ -->
        <div class="row form-group">
          <%= f.label :comment, '口コミ内容 ', class:'col-md-3 col-form-label' %>
          <div class="col-md-9">
            <%= f.text_area :comment, class: "form-control", rows: "5", placeholder:'口コミ内容がなくても、タイトルと評価のみで投稿できます。まずは投稿してみましょう！投稿してから編集もできますよ！' %>
          </div>
        </div>

  <!-- 確認ボタン -->
        <div class="row form-group justify-content-end">
          <div class="col-lg-9">
            <%= f.submit '投稿する', class:"btn btn-success" %>
          </div>
        </div>

      <% end %>
    </div>
  <% end %>
<!--ここまでレビュー用-->

<!--レビュー一覧を表示-->
  <div class="review-index">
    <% if @reviews.present? %>
      <% @reviews.each do |review| %>
        <div class="row">
          <div class="col-md-6 mb-3">
            <div>
              <p><%= simple_time(review.created_at) %></p>
              <h4 class="mb-3">評価：<%= review.score %>点</h4>

          <!--星評価-->
             <div id="star-rate-<%= review.id %>"></div>
              <script>
              $('#star-rate-<%= review.id %>').raty({
                size: 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= review.score %>,
              });
              </script>
        <!--/星評価-->

              <p><%= review.comment %></p>
            </div>
          </div>

          <div class="col-lg-12">
            <% if current_user.id == review.user_id %>
              <%= link_to "レビューを編集", edit_recipe_review_path(@recipe.id, review.id), class: "btn btn-success" %>
              <%= link_to "レビューを削除", recipe_review_path(@recipe.id, review.id), method: :delete, class: "btn btn-danger" %>
            <% end %>
          </div>

        </div>
      <% end %>
    <% end %>
  </div>