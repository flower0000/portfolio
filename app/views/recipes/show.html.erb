<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <div>
        <%= @recipe.dish %>
      </div>

      <div>
        <%= attachment_image_tag @recipe, :dish_photo, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg", size:"100x100" %>
      </div>

      <div>
        <%= @recipe.time %>
      </div>

      <div>
        費用<%= @recipe.money %>円
      </div>

    </div>
  </div>

  <!--材料表記-->
  <div class="row">
    <table class="table table-bordered">
      <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
        <tr class="table-primary">

          <td>
            <%= recipe_ingredient.material %>
          </td>

          <td>
            <%= recipe_ingredient.quantity %>
          </td>

        </tr>
      <% end %>
    </table>
  </div>

<!--調理手順表記-->
  <% @recipe.how_to_makes.each do |how_to_make| %>
    <div class="row">
      <div class="col-lg-5">
        <%= how_to_make.order_no %>.<%= how_to_make.introduction %>
      </div>
    </div>
  <% end %>

<!--いいね機能-->
  <div class="row">
    <% if @recipe.favorited_by?(current_user) %>
      <p>
        <%= link_to recipe_favorites_path(@recipe.id), method: :delete do %>
          ♥<%= @recipe.favorites.count %> いいね
        <% end %>
      </p>
      <% else %>
      <p>
        <%= link_to recipe_favorites_path(@recipe.id), method: :post do %>
          ♡<%= @recipe.favorites.count %> いいね
        <% end %>
      </p>
    <% end %>
  </div>
<!--いいね機能終わり-->

  <div class="row">
    <% if user_signed_in? %>
      <%= link_to "編集する", edit_recipe_path(@recipe.id), class: "mt-3 btn btn-success" %>
    <% end %>
  </div>
</div>