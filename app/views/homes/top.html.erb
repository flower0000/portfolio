<div class="container">
  <div class="row">
   <div class="col-lg-12 mx-auto text-center">
<!--text-centerで領域内で文章を真ん中に持ってくる-->
      <div class="thumbnail">
        <% if user_signed_in? %>

          <% else %>
            <br>登録していなくても閲覧のみ利用できます。</br>

        <% end %>
      </div>
    </div>
  </div>

  <!--ランキング機能。いいね機能順-->
  <div class="row">
    <div class="title col-lg-12">
      いいね♥ランキング
    </div>
  </div>
  <div class="row">
    <% @rankings.each_with_index do |ranking, i| %>
      <div class="col-lg-4">
        第<%= i+1 %>位<%= ranking.dish %>
        <%= link_to recipe_path(ranking.id) do %>
          <%= attachment_image_tag ranking, :dish_photo, format: 'jpeg', size: "300x300", fallback: "no_image.jpg", size:'300x300' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <!--ここまで-->
</div>