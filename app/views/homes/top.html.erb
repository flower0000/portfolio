<div class="container">
  <div class="row">
   <div class="col-lg-12 mx-auto text-center">
<!--text-centerで領域内で文章を真ん中に持ってくる-->
      <div class="thumbnail">ようこそ！CircleCookへ!!</div>
    </div>
  </div>

  <!--ランキング機能。いいね機能順-->
  <div class="row">
    <% @rankings.each.with_index(1) do |ranking, i| %>
      <div class="col-lg-4">
        第<%= i %>位<%= ranking.dish %>
        <%= link_to recipe_path(ranking.id) do %>
          <%= attachment_image_tag ranking, :dish_photo, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg", size:'300x300' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <!--ここまで-->

</div>