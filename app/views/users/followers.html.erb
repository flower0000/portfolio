<div class="container">
  <div class="row">

    <h1>フォロワー一覧</h1>

    <% @users.each do |user| %>
      <table class="table table-bordered mt-3">
        <tr>
          <td>
            会員ID
          </td>
          <td>
            <%= user.id %>
          </td>
        </tr>

        <tr>
          <td>
            名前
          </td>
          <td>
            <%= user.name %>
            <% if current_user != user %>
              <% if user.followed_by?(current_user) %>
                <p><%=link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %></p>
                <% else %>
                  <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary" %></p>
              <% end %>
            <% end %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>