<!--マイページ-->
<div class="container">
  <div class="row">
    <table class="table table-bordered mt-3">
      <tr>
        <td>
          会員ID
        </td>
        <td>
          <%= @user.id %>
        </td>
      </tr>

      <tr>
        <td>
          名前
        </td>
        <td>
          <%= @user.name %>
        </td>
      </tr>

      <tr>
        <td>
          メールアドレス
        </td>
        <td>
          <%= @user.email %>
        </td>
      </tr>
    </table>
  </div>

  <div class="row">
    <p><%=link_to "フォロー", follows_user_path(@user.id), class: "mt-3 ml-3 mb-3 btn btn-primary" %></p>
    <p><%=link_to "フォロワー", followers_user_path(@user.id), class: "mt-3 ml-3 mb-3 btn btn-primary" %></p>
  </div>

  <div class="row mt-3">
    <% @recipes.each do |recipe| %>
      <div class="col-lg-4">
        <%= link_to recipe_path(recipe.id) do %>
          <%= attachment_image_tag recipe, :dish_photo, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg", size:'300x300' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row mt-3">
    <div class="col-lg-12 text-center">
      <%= link_to "編集する", users_edit_path, class: "ml-3 btn btn-success" %>
      <%= link_to "退会する", users_check_path, class: "ml-3 btn btn-danger" %>
    </div>
  </div>
</div>