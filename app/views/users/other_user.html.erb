<div class="container">
  <div class="row"  style="width:350px;">
    <table class="table table-bordered mt-3">
      <tr>
        <td>
          会員ID
        </td>
        <td>
          <%= @user.id %>
        </td>
      </tr>

      <tr>
        <td>
          名前
        </td>
        <td>
          <%= @user.name %>
        </td>
      </tr>
    </table>
  </div>

  <% if user_signed_in? %>
    <div class="row">
      <% if @user.followed_by?(current_user) %>
        <p><%=link_to "フォロー解除", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %></p>
        <% else %>
          <p><%=link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-primary" %></p>
      <% end %>
    </div>
  <% end %>

  <div class="row mt-3">
    <% @recipes.each do |recipe| %>
      <div class="col-lg-4">
        <%= link_to recipe_path(recipe.id) do %>
          <%= attachment_image_tag recipe, :dish_photo, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg", size:'300x300' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>